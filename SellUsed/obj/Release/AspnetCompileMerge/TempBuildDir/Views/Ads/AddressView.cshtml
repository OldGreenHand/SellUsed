@model SellUsed.Models.Product

<div id="locationField" class="form-group">
    @*<span class="glyphicon glyphicon-home" aria-hidden="true"></span>*@
    <div class="col-md-offset-2 col-md-10">
        <input id="autocomplete" type="text" class="form-control" placeholder="Enter your address" aria-describedby="basic-addon1" onFocus="geolocate()">
    </div>
</div>

<div id="address" class="form-horizontal">
    <div class="form-group" >
        <strong class="control-label col-md-2">Street address</strong>
        <div class="col-md-2">
            @Html.EditorFor(model => model.StreetNo, new { htmlAttributes = new { @class = "form-control", id = "street_number", disabled = "disabled" } })
            @Html.ValidationMessageFor(model => model.StreetNo, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-8">
            @Html.EditorFor(model => model.StreetRoute, new { htmlAttributes = new { @class = "form-control", id = "route", disabled = "disabled" } })
            @Html.ValidationMessageFor(model => model.StreetRoute, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group" >
        @Html.LabelFor(model => model.Suburb, htmlAttributes: new { @class = "control-label col-md-2"})
        <div class="col-md-10">
            @Html.EditorFor(model => model.Suburb, new { htmlAttributes = new { @class = "form-control", @id = "locality", @disabled = "disabled" } })
            @Html.ValidationMessageFor(model => model.Suburb, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.State, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-2">
            @Html.EditorFor(model => model.State, new { htmlAttributes = new { @class = "form-control", @id = "administrative_area_level_1", @disabled = "disabled" } })
            @Html.ValidationMessageFor(model => model.State, "", new { @class = "text-danger" })
        </div>
        @Html.LabelFor(model => model.Postcode, htmlAttributes: new { @class = "control-label col-md-1" })
        <div class="col-md-7">
            @Html.EditorFor(model => model.Postcode, new { htmlAttributes = new { @class = "form-control", @id = "postal_code", @disabled = "disabled" } })
            @Html.ValidationMessageFor(model => model.Postcode, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" >
        <strong class="control-label col-md-2">Country</strong>
        <div class="col-md-10">
            <input class="form-control" id="country" disabled="disabled">
        </div>
    </div>
</div>

<script src="~/Scripts/googleplaces.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDHybHO9YzLDgb9x0xzIweEmU-ei2EGP20&libraries=places&callback=initAutocomplete"
            async defer></script>
