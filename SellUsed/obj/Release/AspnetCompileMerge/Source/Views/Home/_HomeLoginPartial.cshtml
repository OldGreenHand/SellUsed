@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated)
{
    <script src="~/Scripts/app/notification.js"></script>
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>@Html.ActionLink("Hello, " + User.Identity.GetUserName() + "!", "Dashboard", "Home")</li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
            @*<a href="@Url" class="dropdown-toggle" data-toggle="dropdown">
                Hello, @User.Identity.GetUserName() !
            </a>*@
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Login", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
