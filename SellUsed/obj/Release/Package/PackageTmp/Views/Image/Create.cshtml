@model SellUsed.ViewModels.ImageViewModel

<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap3-dialog/1.34.7/css/bootstrap-dialog.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap3-dialog/1.34.7/js/bootstrap-dialog.min.js"></script>
<script src="~/Scripts/app/imagepreview.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<style>
    .thumbnail img {
        height: 220px;
        width: auto;
    }
</style>

@{
    ViewBag.Title = "Upload Images";
}

<div class="row">
    <div class="col-xs-6 col-md-3" id="permanentimage">
        <div class="thumbnail">
            <img src="~/Images/uploadimage.png" class="imageholder" alt="image">
        </div>
    </div>
</div>

<div class="jumbotron">
    @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div>
            @Html.LabelFor(x => x.File)
            @Html.TextBoxFor(x => x.File, new {id = "files", type = "file", multiple = "true"})
            @Html.ValidationMessageFor(x => x.File)
        </div>

        <button class="btn btn-primary" type="button" id="clear" hidden="hidden">Clear</button> 
        <button class="btn btn-success" type="submit">Upload File</button>
        <button class="btn btn-danger" type="button" onclick="location.href = '@Url.Action("Index", "Ads")'">Skip</button>
    }
</div>